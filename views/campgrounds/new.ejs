<% layout('layouts/boilerplate') %>
<!-- The use of campground[title] and campground[location]  is a way of organizing the form data. When the form is submitted, the server will receive the data in a structured way, where the data for the title will be grouped under the "campground"  -->

<div class="row">
  <h1 class="mb-3 text-center">New Campground</h1>
  <div class="col-6 offset-3">
    <form action="/campgrounds" method="POST">
      <div class="form-floating mb-3">
        <input
          class="form-control"
          type="text"
          name="campground[title]"
          id="title"
          placeholder="Enter Campground Title"
        />
        <label for="title">Title</label>
      </div>
      <div class="form-floating mb-3">
        <input
          class="form-control"
          type="text"
          name="campground[location]"
          id="location"
          placeholder="Enter Campground Description"
        />
        <label for="location">Location</label>
      </div>
      <div class="form-floating mb-3">
        <input
          class="form-control"
          type="text"
          name="campground[image]"
          id="image"
          placeholder="Enter Campground Image Link"
        />
        <label for="image">Image Url</label>
      </div>
      <div class="input-group mb-3">
        <span class="input-group-text">$</span>
        <div id="price-label" class="form-floating">
          <input
            type="text"
            class="form-control"
            id="price"
            placeholder="Enter Price"
            name="campground[price]"
            aria-describedby="price-label"
          />
          <label for="price">Campground Price</label>
        </div>
      </div>
      <div class="form-floating mb-3">
        <textarea
          class="form-control"
          placeholder="Campground Description"
          name="campground[description]"
          id="description"
          style="height: 80px"
        ></textarea>
        <label for="description">Description</label>
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Add Campground</button>
      </div>
    </form>
    <a href="/campgrounds">All Campgrounds</a>
  </div>
</div>
